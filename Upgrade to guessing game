import random

print("--- 欢迎来到猜硬币游戏 ---")
# 让用户输入猜测
guess = input("请猜它是正面还是反面？(输入 正面 或 反面): ")

coin = ['正面', '反面']
print("正在抛硬币...")
result = random.choice(coin)

print("----------------")
print("开奖结果是：" + result)

# 判断输赢
if guess == result:
    print("恭喜你！你是个预言家！")
else:
    print("很遗憾，猜错了，下次好运！")
print("----------------")
